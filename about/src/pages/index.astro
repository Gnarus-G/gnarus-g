<style is:global>
  h1, h1 + p, h1 + p + p {
    margin: 0 !important;
    text-align: center;
  }

  h4 + p {
    display: flex;
    justify-content: space-between;
  }

  ul {
    padding: 0 2rem !important;
  }

  h2#skills + p, h2#skills + p + p, h2#skills + p + p + p {
    display: grid;
    grid-template-columns: 10ch auto;
  }

  h3 + p {
    padding: 0 0.5rem !important;
  }

  h3:has(+ p), h3 + p, h3 + p + ul {
    margin: 0 !important;
  }

  h2 {
    color: theme("colors.blue.700") !important;
    border-bottom: solid;
  }

  h1, h4 {
    color: theme("colors.blue.800") !important;
  }

  h3 > a {
    color: theme("colors.blue.950") !important;
    text-decoration: none !important; 
  }

</style>
